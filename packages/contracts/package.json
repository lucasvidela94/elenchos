{
  "name": "@elenchos/contracts",
  "version": "0.1.0",
  "description": "Smart contracts for Elenchos",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "lint": "solhint src/**/*.sol",
    "format": "forge fmt",
    "clean": "forge clean",
    "deploy:local": "forge script script/Deploy.s.sol --rpc-url http://localhost:8545 --broadcast",
    "deploy:mumbai": "forge script script/Deploy.s.sol --rpc-url $MUMBAI_RPC_URL --broadcast --verify",
    "deploy:polygon": "forge script script/Deploy.s.sol --rpc-url $POLYGON_RPC_URL --broadcast --verify"
  },
  "devDependencies": {
    "solhint": "^4.1.0"
  }
}
